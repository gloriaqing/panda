$(function(){$("#footer").load("footer.html");$(document).scrollTop(0);setTimeout(function(){var $document=$(document);var $wechat=$(".wechat");var $care=$(".care");$wechat.mouseenter(function(){$care.show()});$wechat.mouseleave(function(){$care.hide()});$wechat.click(function(e){e.stopPropagation();if(!$care.hasClass("show")){$care.addClass("show");$(this).off("mouseleave")}});$document.click(function(e){if($care.hasClass("show")){if(!$(e.target).parent().hasClass("wechat")&&!$(e.target).hasClass("wechat")){$care.removeClass("show");$care.hide();$wechat.mouseleave(function(){$care.hide()})}}})},3000)});